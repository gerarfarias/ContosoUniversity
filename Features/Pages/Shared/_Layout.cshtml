<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Contoso University</title>


    <!-- Bootstrap 5 from CDN (quick for dev) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous" />


    <style>
        /* simple skip-link styling */
        .skip-link { position: absolute; left: -10000px; top: auto; width: 1px; height: 1px; overflow: hidden; }
        .skip-link:focus { left: 0; top: 0; width: auto; height: auto; padding: .5rem; background: #fff; z-index: 1000; }
    </style>
</head>
<body>
    <a class="skip-link" href="#maincontent">Skip to main content</a>


    <header>
        @await Html.PartialAsync("_NavigationPartial")
    </header>


    <main id="maincontent" class="container mt-4" role="main">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success" role="status">@TempData["Success"]</div>
        }


        @RenderBody()
    </main>


    <footer class="border-top mt-4 p-3 text-muted">
        @await Html.PartialAsync("_FooterPartial")
    </footer>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

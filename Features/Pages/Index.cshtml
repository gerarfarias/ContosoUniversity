@model IEnumerable<ContosoUniversity.Models.StudentViewModel>

<h2>Students</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success" role="status">
        @TempData["Success"]
    </div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.First().FirstName)</th>
            <th>@Html.DisplayNameFor(m => m.First().LastName)</th>
            <th>@Html.DisplayNameFor(m => m.First().EnrollmentDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var student in Model)
    {
        <tr>
            <td>@student.FirstName</td>
            <td>@student.LastName</td>
            <td>@student.EnrollmentDate.ToShortDateString()</td>
            <td>
                <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-secondary">Edit</a>
            </td>
        </tr>
    }
    </tbody>
</table>

@model ContosoUniversity.Models.ContactViewModel


<h2>Contact</h2>


<form asp-action="Contact" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" aria-describedby="NameHelp" />
        <div id="NameHelp" class="form-text">Enter your full name (required).</div>
        <span asp-validation-for="Name" class="text-danger" aria-live="polite"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" aria-describedby="EmailHelp" />
        <div id="EmailHelp" class="form-text">We'll use this to reply.</div>
        <span asp-validation-for="Email" class="text-danger" aria-live="polite"></span>
    </div>


    <div class="mb-3">
        <label asp-for="Message" class="form-label"></label>
<textarea asp-for="Message" class="form-control" rows="4" aria-describedby="MessageHelp"></textarea>
        <div id="MessageHelp" class="form-text">Tell us what's on your mind.</div>
        <span asp-validation-for="Message" class="text-danger" aria-live="polite"></span>
    </div>


    <button type="submit" class="btn btn-primary">Send</button>
</form>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
